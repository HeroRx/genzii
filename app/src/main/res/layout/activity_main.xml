<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gzucm.yiyuankeshi.MainActivity">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <EditText
            android:hint="请输入要查询的ID"
            android:id="@+id/et"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:onClick="onQuery"
            android:id="@+id/btn"
            android:text="查询数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          />


    </LinearLayout>


    <TextView
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ll"
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BigDepartment表数据"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/ll02"
        android:layout_width="368dp"
        app:layout_constraintTop_toBottomOf="@+id/tv"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <EditText
            android:hint="请输入要查询的Name"
            android:id="@+id/et02"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:onClick="onQuery"
            android:id="@+id/btn02"
            android:text="查询数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </LinearLayout>


    <TextView
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ll02"
        android:id="@+id/tv02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Department表数据"
        tools:layout_editor_absoluteX="0dp" />


    <Button
        android:id="@+id/btn03"
        android:text="跳转到下拉列表"
        app:layout_constraintTop_toBottomOf="@+id/tv02"
        android:onClick="turn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />



</android.support.constraint.ConstraintLayout>
